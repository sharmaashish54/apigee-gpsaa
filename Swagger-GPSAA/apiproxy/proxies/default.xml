<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="default">
    <Description/>
    <FaultRules/>
    <Flows>
        <Flow name="listPentioners">
            <Description>List all pentioners</Description>
            <Request/>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/pentioners/info") and (request.verb = "GET")</Condition>
        </Flow>
        <Flow name="createPentioner">
            <Description>Create a pentioner with info</Description>
            <Request/>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/pentioners/info") and (request.verb = "POST")</Condition>
        </Flow>
        <Flow name="showPentionerdetailsById">
            <Description>Info for a specific pentioner</Description>
            <Request/>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "/pentioner/*") and (request.verb = "GET")</Condition>
        </Flow>
    </Flows>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
    <PreFlow name="PreFlow">
        <Request>
            <Step>
                <Name>Spike-Arrest-policy</Name>
            </Step>
            <Step>
                <Name>Quota-gpssa-policy</Name>
            </Step>
            <Step>
                <Name>Verify-API-Key-flow</Name>
            </Step>
        </Request>
        <Response/>
    </PreFlow>
    <HTTPProxyConnection>
        <BasePath>/swagger-gpsaa</BasePath>
        <Properties/>
        <VirtualHost>secure</VirtualHost>
        <VirtualHost>default</VirtualHost>
    </HTTPProxyConnection>
    <RouteRule name="default">
        <TargetEndpoint>default</TargetEndpoint>
    </RouteRule>
</ProxyEndpoint>